# Polymarket wallet credentials (Polygon)
POLYMARKET_PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# Polymarket CLOB API credentials (generated from private key)
# Run: python main.py derive-keys  to generate these
POLYMARKET_API_KEY=
POLYMARKET_SECRET=
POLYMARKET_PASSPHRASE=

# The Odds API key — free tier at https://the-odds-api.com (used by divergence strategy)
ODDS_API_KEY=YOUR_ODDS_API_KEY_HERE

# Odds-API.io key — free tier: 2,400 req/day (used by standalone value strategy)
# Get key at https://odds-api.io/pricing/free (no credit card required)
ODDS_API_IO_KEY=YOUR_ODDS_API_IO_KEY_HERE

# Chain config
CHAIN_ID=137

# Strategy thresholds (optional overrides)
ARB_MIN_SPREAD=0.02
DIVERGENCE_THRESHOLD=0.05
MAX_POSITION_USDC=100
MAX_TOTAL_EXPOSURE_USDC=500
KELLY_FRACTION=0.25

# Bot mode: dry_run or live
BOT_MODE=dry_run

# Polling / scan limits (optional overrides)
SCAN_INTERVAL_SECONDS=30
MAX_MARKETS_PER_SCAN=200
